@model IEnumerable<AgriEnergyConnect.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<h1 class="mb-4 text-primary fw-bold">Manage Farmers</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="text-secondary">Total Farmers: @Model.Count()</h5>
    <a asp-action="Create" class="btn btn-success">
        ➕ Add New Farmer
    </a>
</div>

<table class="table table-hover table-bordered shadow-sm rounded">
    <thead class="table-primary text-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().ContactNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().FarmLocation)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-medium">@item.Name</td>
                <td>@item.Email</td>
                <td>@item.ContactNumber</td>
                <td>@item.FarmLocation</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FarmerId" class="btn btn-sm btn-outline-warning me-1">✏️ Edit</a>
                    <a asp-action="Details" asp-route-id="@item.FarmerId" class="btn btn-sm btn-outline-info me-1">🔍 Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FarmerId" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
